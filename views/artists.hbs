<h1 class="juzhong2">Artists</h1>

{{#if errorMessages.length}}
  <p class="juzhong">Couldn't fetch the musics because:</p>
  <ul>
    {{#each errorMessages}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{else}}
  {{#if artists.length}}
    <ul class="juzhong">
      {{#each artists}}
        <li>
            {{artistName}}
            ({{type}})
            <form action="/artists/deleteArtist/{{aid}}" method="post" style="display: contents;">
               <input type="submit" value="Delete">
            </form>
            <a href="#{{aid}}"><button>Update</button></a>
        </li>

  <div class="modal" id="{{aid}}">
    <a href="#close" class="modal-overlay" aria-label="Close"></a>
    <div class="modal-container">
        <div class="modal-header">
          <a href="#close" class="btn btn-clear float-right" aria-label="Close"></a>
        <div class="modal-title h5">Modal title</div>
    </div>
    <div class="modal-body">
      <div class="content">
        <h1>Update</h1>
  {{#if errorMessages.length}}  
  <p>Couldn't update the music because:</p>
  <ul>
    {{#each errorMessages}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}
<form action="/artists/update/{{aid}}" method="post" >
  <div>
    <div style="margin-bottom:5px">
      ArtistName:
      <input type="text" name="artistName" value="{{artistName}}" />
    </div>
    <div style="margin-bottom:5px">
      Type:
      <input type="text" name="type" value="{{type}}" />
    </div>
    <input type="submit" value="update" />
  </div>
</form>
      </div>
    </div>
    <div class="modal-footer">
      ...
    </div>
  </div>
</div>
      {{/each}}
    </ul>

  {{else}}
    <p class="juzhong">We have no artists to recommend at the moment.</p>
  {{/if}}
           
{{/if}}
            <a href="/artists/create" class="juzhong">Create</a>
            
